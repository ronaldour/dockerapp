pipeline {
  agent any

  stages{
    stage('Test'){
      steps {
        sh "echo Testing..."
        sh '''
          docker-compose -f ./test/docker-compose.yml up
          sleep 5
          if curl --fail -X GET http://localhost:5000; then
            exit 0
          else
            echo "failed"
            exit 1
          fi;
        '''
      }
    }
    stage('Deploy'){
      steps{
        echo "Deploying"
        sh "eval \$(aws ecr get-login --no-include-email --region us-east-1)"
        sh "docker build -t docker-app:latest ."
        sh "docker tag docker-app 492864460344.dkr.ecr.us-east-1.amazonaws.com/docker-app:latest"
        sh "docker push 492864460344.dkr.ecr.us-east-1.amazonaws.com/docker-app:latest"
      }
    }
  }
  post {
    failure{
      echo "fail"
    }
    success{
      echo "Success"
    }
  }
}
